      <script type="text/javascript">
         $(document).ready(function() {
            $('.counter-number').each(function() {
               $(this).prop('counter', 0).animate({
                  counter: $(this).text()
               }, {
                  duration: 1000,
                  easing: 'swing',
                  step: function(now) {
                     $(this).text(Math.ceil(now) + '');
                  }
               });
            });
         });
      
         let hour = parseInt({{h}}),
            min = parseInt({{m}}),
            sec = parseInt({{s}});
      
         setInterval(() => {
            if (sec < 59) {
               sec = sec + 1;
            } else {
               sec = 0;
               if (min < 59) {
                  min = min + 1;
               } else {
                  min = 0;
                  if (h < 23) {
                     h = h + 1;
                  } else {
                     h = 0;
                  }
               }
            }

            document.querySelector(".hour_num").innerText = (hour > 9) ? hour : `0${hour}`;
            document.querySelector(".min_num").innerText = (min > 9) ? min : `0${min}`;
            document.querySelector(".sec_num").innerText = (sec > 9) ? sec : `0${sec}`;
         }, 1000);
      </script>